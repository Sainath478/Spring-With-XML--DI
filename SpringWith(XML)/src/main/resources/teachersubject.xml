<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
        "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans>

	<bean id="teach" class="com.demo.Teacher">
		<constructor-arg index="0" value="007"></constructor-arg>
		<constructor-arg index="1" value="Shinde sir"></constructor-arg>
		<constructor-arg index="2" value="80000"></constructor-arg>
		<constructor-arg index="3" ref="sub"></constructor-arg>
	</bean>

	<bean id="sub" class="com.demo.Subject">
		<constructor-arg index="0" value="504"></constructor-arg>
		<constructor-arg index="1" value="English"></constructor-arg>
		<constructor-arg index="2" value="12"></constructor-arg>
	</bean>







</beans>